<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.fosdesktop.controller.MenuController">
    <stylesheets>
        <URL value="@../css/menu-styles.css" />
    </stylesheets>

    <HBox prefHeight="60" prefWidth="650" style="-fx-background-color: #333; -fx-padding: 10;">
        <HBox spacing="10">
            <Button onAction="#showMenu" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px;" text="Menu" />
            <Button onAction="#showHistory" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18px;" text="History" />
        </HBox>

        <Region HBox.hgrow="ALWAYS" />

        <HBox spacing="10">
            <Label fx:id="currentEmail" prefHeight="46.0" style="-fx-text-fill: white; -fx-font-size: 16px;" text="Email: " />
            <Button onAction="#onLogout" style="-fx-background-color: #ff3333; -fx-text-fill: white; -fx-font-size: 14px;" text="Logout" />
        </HBox>
    </HBox>

    <StackPane layoutY="60" prefHeight="800" prefWidth="650">
        <VBox fx:id="menuContentVBox" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">
            <VBox spacing="5" style="-fx-padding: 10; -fx-border-radius: 5;">

                <!-- Drinks Section -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Drinks" />
                    <Button fx:id="btnCreateDrink"
                            onAction="#onCreateDrink"
                            text="Create"
                            visible="false"
                            style="-fx-font-size: 14px; -fx-background-color: #c1f0c1;"/>

                    <Button fx:id="btnDeleteSelectedDrinks"
                            onAction="#onDeleteSelectedDrinks"
                            text="Delete selected"
                            visible="false"
                            disable="true"
                            style="-fx-font-size: 14px; -fx-background-color: #ffb3b3;"/>
                </HBox>
                <VBox fx:id="drinkListVBox" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnPrevDrinks" onAction="#prevPageDrinks" text="&lt;" />
                    <Label fx:id="lblDrinksPage" text="1" />
                    <Button fx:id="btnNextDrinks" onAction="#nextPageDrinks" text="&gt;" />
                </HBox>

                <!-- Meals Section -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Meals" />
                    <Button fx:id="btnCreateMeal"
                            onAction="#onCreateMeal"
                            text="Create"
                            visible="false"
                            style="-fx-font-size: 14px; -fx-background-color: #c1f0c1;"/>

                    <Button fx:id="btnCreateCuisine"
                            onAction="#onCreateCuisine"
                            text="Create cuisine"
                            visible="false"
                            style="-fx-font-size: 14px; -fx-background-color: #c1f0c1;"/>

                    <Button fx:id="btnDeleteSelectedMeals"
                            onAction="#onDeleteSelectedMeals"
                            text="Delete selected"
                            visible="false"
                            disable="true"
                            style="-fx-font-size: 14px; -fx-background-color: #ffb3b3;"/>
                </HBox>
                <VBox fx:id="mealListVBox" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnPrevMeals" onAction="#prevPageMeals" text="&lt;" />
                    <Label fx:id="lblMealsPage" text="1" />
                    <Button fx:id="btnNextMeals" onAction="#nextPageMeals" text="&gt;" />
                </HBox>

                <!-- Desserts Section -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Desserts" />
                    <Button fx:id="btnCreateDessert"
                            onAction="#onCreateDessert"
                            text="Create"
                            visible="false"
                            style="-fx-font-size: 14px; -fx-background-color: #c1f0c1;"/>

                    <Button fx:id="btnDeleteSelectedDesserts"
                            onAction="#onDeleteSelectedDesserts"
                            text="Delete selected"
                            visible="false"
                            disable="true"
                            style="-fx-font-size: 14px; -fx-background-color: #ffb3b3;"/>
                </HBox>
                <VBox fx:id="dessertListVBox" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button fx:id="btnPrevDesserts" onAction="#prevPageDesserts" text="&lt;" />
                    <Label fx:id="lblDessertsPage" text="1" />
                    <Button fx:id="btnNextDesserts" onAction="#nextPageDesserts" text="&gt;" />
                </HBox>
            </VBox>

            <!-- Order Section -->
            <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
                <Label fx:id="totalPriceLabel" style="-fx-font-size: 16x; -fx-font-weight: bold;" text="Total Price: $0.0" />
                <Button onAction="#onSubmitOrder" style="-fx-background-color: #3385ff; -fx-text-fill: white; -fx-padding: 10; -fx-font-size: 16px;" text="Order Now" />
            </HBox>
        </VBox>

        <VBox fx:id="historyContentVBox" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;" visible="false">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Order History" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="btnPrevOrders" onAction="#prevPageOrders" text="&lt;" />
                <Label fx:id="lblOrdersPage" text="1" />
                <Button fx:id="btnNextOrders" onAction="#nextPageOrders" text="&gt;" />
            </HBox>
            <VBox fx:id="orderHistoryListVBox" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="500">
                    <VBox fx:id="orderListVBox" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 10;" />
                </ScrollPane>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
