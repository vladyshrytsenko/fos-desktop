<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.fosdesktop.controller.PaymentController">

    <stylesheets>
        <URL value="@payment-styles.css"/>
    </stylesheets>

    <Label text="Enter Card Details"/>

    <TextField fx:id="cardNumberField" promptText="Card Number"/>
    <TextField fx:id="expMonthField" promptText="Exp Month (MM)"/>
    <TextField fx:id="expYearField" promptText="Exp Year (YY)"/>
    <TextField fx:id="cvcField" promptText="CVC"/>

    <Button text="Pay Now" onAction="#onSubmitPayment"/>

    <Label fx:id="messageLabel" text=""/>
</VBox>
